<!doctype html>
@{
    Layout = null;

}
@model Eqra.ViewModels.LoginViewModel


<html lang="ar" dir="rtl">
<head>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Meta -->
    <meta name="description" content="UniPro App">
    <meta name="author" content="ParkerThemes">
    <link rel="shortcut icon" href="/img/fav.png" />

    <!-- Title -->
    <title>UniPro Login</title>


    <!-- *************
        ************ Common Css Files *************
    ************ -->
    <!-- Bootstrap css -->
    <link rel="stylesheet" href="/css/bootstrap.rtl.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="/css/main-rtl.css">


    <!-- *************
        ************ Vendor Css Files *************
    ************ -->

</head>
<body class="authentication">

    <!-- Loading wrapper start -->
    <div id="loading-wrapper">
        <div class="spinner-border"></div>
        Loading...
    </div>
    <!-- Loading wrapper end -->
    <!-- *************
        ************ Login container start *************
    ************* -->
    <div class="login-container">

        <div class="container-fluid h-100">

            <!-- Row start -->
            <div class="row no-gutters h-100">
                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                    <div class="login-about">
                        <div class="slogan">
                            <h1>تسجيل الدخول</h1>
                            <h1>لمنصة</h1>
                            <h1>E-Book</h1>
                        </div>

                    </div>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                    <div class="login-wrapper">
                        <div class="login-screen">
                            <form asp-action="Login" method="post">
                                <div class="login-body">
                                    <a href="reports.html" class="login-logo">
                                        <img src="/img/logo.svg" alt="Uni Pro Admin">
                                    </a>
                                    <h6>مرحبا بك في منصة E-Book<br>قم بإدخال بياناتك لتسجيل الدخول</h6>
                                    <div class="field-wrapper">
                                        <input asp-for="Email" id="txtEmail" type="email" autofocus>
                                        <div class="field-placeholder">البريد الالكتروني</div>
                                    </div>
                                    <div class="field-wrapper">
                                        <input asp-for="Password" type="password">
                                        <div class="field-placeholder">كلمة المرور</div>
                                    </div>

                                    <div class="actions">
                                        <button type="submit" class="btn btn-primary ms-auto">تسجيل الدخول</button>
                                    </div>
                            </form>
                        </div>
                        <div class="login-footer">
                            <span class="additional-link">لاتملك حساب؟ <a href="/Account/Register" class="btn btn-light">التسجيل</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Row end -->


    </div>
    </div>
    <!-- *************
        ************ Login container end *************
    ************* -->
    <!-- *************
        ************ Required JavaScript Files *************
    ************* -->
    <!-- Required jQuery first, then Bootstrap Bundle JS -->
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.bundle.min.js"></script>
    <script src="/js/modernizr.js"></script>
    <script src="/js/moment.js"></script>

    <!-- *************
        ************ Vendor Js Files *************
    ************* -->
    <!-- Main Js Required -->
    <script src="/js/main.js"></script>
    <script src="/js/re.js"></script>

</body>

<script>


    $(document).ready(function() {



        $("#btnSubmit").click(function() {
            if ($("#txtEmail").val() == "") {
                Swal.fire({
                    icon: 'error',
                    title: 'خطأ',
                    text: 'يجب ادخال البريد الالكتروني',
                })
                return
            }
            else if (validateEmail($("#txtEmail").val()) == false) {
                Swal.fire({
                    icon: 'error',
                    title: 'خطأ',
                    text: 'البريد الالكتروني المدخل غير صحيح',
                })
                return
            }

            var model = JSON.stringify({
                email: $("#txtEmail").val(),
                password: $("#txtPassword").val()
            });

            $.ajax({
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                url: "/Account/Register",
                type: "POST",
                data: model,
                beforeSend: function() {
                    Swal.fire({
                        icon: 'info',
                        html: 'يتم تسجيل الدخول.....',
                        showConfirmButton: false
                    })
                },
                success: function() { }
            })

        })

    })
</script>

</html>